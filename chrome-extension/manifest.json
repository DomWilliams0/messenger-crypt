{
	"manifest_version": 2,

	"name": "Messenger Crypt",
	"description": "Adds transparent GPG to Facebook Messenger",
	"version": "0.1",

	"content_scripts": [
		{
			"matches": ["*://*.messenger.com/*"],
			"js": ["messenger-re.js", "crypto.js", "inject.js"]
		}
	],

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"https://*.messenger.com/*",
		"https://localhost/*"
	],

	"background": {
		"page": "background.html"
	},

	"browser_action": {
		"default_popup": "popup.html"
	}
}
